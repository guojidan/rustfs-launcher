{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RustFS Launcher",
  "version": "0.1.0",
  "identifier": "com.dandan.rustfs-launcher",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "trunk build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "RustFS Launcher",
        "width": 800,
        "height": 800,
        "minWidth": 800,
        "minHeight": 800,
        "resizable": true,
        "center": true,
        "visible": true,
        "focus": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "binaries/*"
    ]
  }
}
